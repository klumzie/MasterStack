# Unifi Network Controller
UNIFI_HOST=https://unifi.local
UNIFI_USERNAME=admin
UNIFI_PASSWORD=your_password
UNIFI_PORT=8443
UNIFI_VERIFY_SSL=false

# Proxmox
PROXMOX_HOST=https://proxmox.local:8006
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=mcp-token
PROXMOX_TOKEN_VALUE=your-token-value
PROXMOX_VERIFY_SSL=false

# Home Assistant
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your_long_lived_access_token

# N8N
N8N_HOST=http://n8n.local:5678
N8N_API_KEY=your_n8n_api_key

# Docker & Portainer
DOCKER_HOST=unix:///var/run/docker.sock
PORTAINER_URL=http://portainer.local:9000
PORTAINER_API_KEY=your_portainer_api_key

# Minecraft Servers (JSON array)
# Example: [{"name":"survival","host":"minecraft1.local","port":25575,"password":"rcon_pass"},{"name":"creative","host":"minecraft2.local","port":25575,"password":"rcon_pass"}]
MINECRAFT_SERVERS=[]

# Plex
PLEX_URL=http://plex.local:32400
PLEX_TOKEN=your_plex_token

# qBittorrent
QBITTORRENT_HOST=http://qbittorrent.local:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=your_password

# Sonarr
SONARR_URL=http://sonarr.local:8989
SONARR_API_KEY=your_sonarr_api_key

# Radarr
RADARR_URL=http://radarr.local:7878
RADARR_API_KEY=your_radarr_api_key

# Lidarr (optional)
LIDARR_URL=http://lidarr.local:8686
